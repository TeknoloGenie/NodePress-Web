.em-tabs, .em-tab-list, .em-tab-panel {
  display: block;
}

.em-tab-list {
  border-bottom: 1px solid #eee;
}

.em-tab {
  display: inline-block;
  padding: 6px 12px;
  border: 1px solid transparent;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  cursor: pointer;
  margin-bottom: -1px;
  position: relative;
}

.em-tab[active=true] {
  border-color: #eee;
  border-bottom-color: #fff;
}