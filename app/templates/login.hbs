<div class="container">
    <div class="page-header navbar-offset">Member Login</div>
    <form class="form-signin col-lg-4 col-sm-6 col-lg-offset-4 col-md-offset-3 col-sm-offset-3" role="form">
        <h3 class="form-signin-heading">Login</h3>
        {{view Ember.TextField class="form-control np-margin-sm" type="email" placeholder="Email address" autofocus=true valueBinding="formEmail"}}
        {{view Ember.TextField class="form-control np-margin-sm" type="password" placeholder="Password" valueBinding="formPassword"}}
        <button class="btn btn-lg node-bg-green btn-block np-margin-xlg" type="submit" {{action 'login'}}>Login</button>
    </form>
</div>